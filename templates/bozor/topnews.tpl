<div class="recent-posts-list-extended-item">
		<div class="recent-posts-list-extended-thumb">
				<a href="{link}">
						<img style="width: 100px;height: 90px;" src="{image-1}" class="attachment-thumbnail size-thumbnail wp-post-image" alt="" />
				</a>
		</div>
		<!-- .recent-posts-list-extended-thumb -->
		<div class="recent-posts-list-extended-text-wrap">
				<h5 class="recent-posts-list-extended-title">
						<a href="{link}">{title}</a>
				</h5>
				<div class="recent-posts-list-extended-meta entry-meta">
						<span class="posted-on">{date}</span>
				</div>
		</div>
		<!-- .recent-posts-list-extended-text-wrap -->
</div>
<!-- .recent-posts-list-extended-item -->
