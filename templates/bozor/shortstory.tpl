<div class="news-block-item">
		<div class="news-block-wrapper">
				<div class="news-block-thumb">
						<a href="{full-link}">
								<img style="width: 100%;height: auto;" src="{image-1}" class="aligncenter wp-post-image" alt="Reflex.uz" />
						</a>
						<span class="news-categories">{link-category}</span>
				</div>
				<!-- .news-block-thumb -->

				<div class="news-block-text-wrap">
						<div class="news-block-meta entry-meta">
								<span class="posted-on">{date}</span>
								<span class="comments-link"><a href="{full-link}#comments">{comments-num}</a></span>
						</div>
						<!-- .news-block-meta -->
						<h3 class="news-block-title">
								<a href="{full-link}">{title}</a>
						</h3>

						<div class="news-block-summary">
								<p>{short-story limit="100"}...</p>
						</div>
						<!-- .news-block-summary -->
				</div>
				<!-- .news-block-text-wrap -->
		</div>
		<!-- .news-block-wrapper -->
</div>
<!-- .news-block-item -->
