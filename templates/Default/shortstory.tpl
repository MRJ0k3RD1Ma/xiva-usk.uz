<div class="short-item">
		<div class="short-cols fx-row">
				<a class="short-img img-fit" href="{full-link}">
						<img
								data-src="{image-1}"
								src="{image-1}"
								alt="{title}"
								class="loaded"
								data-was-processed="true"
						/>
				</a>
				<div class="short-desc fx-1 fx-col">
						<a class="short-title" href="{full-link}">
								{title}
						</a>
						<div class="short-text">
								{short-story limit="240"}
						</div>
						<div class="fx-1"></div>
						<div class="short-meta fx-row fx-middle icon-left">
								<div class="short-meta-item"><span class="far fa-calendar-alt"></span>{date}</div>
						</div>
				</div>
		</div>
</div>
